@model CartIndexViewModel
@{
    ViewData["Title"] = "Cart";
}

<div class="container">
    <div class="h4 col-lg-9 col-md-12 content-margin">Your cart:</div>

    <div class="row">
        <div class="text-danger" asp-validation-summary="All"></div>
    </div>

    <!-- Items in cart -->
    <table class="table table-striped table-bordered table-condensed">
        <tr>
            <th>Name</th>
            <th class="text-center">Price</th>
            <th class="text-center">Quantity</th>
            <th classs="text-center">Delete</th>
        </tr>
        @if (Model.CartItems.Count == 0)
        {
            <tr>
                <td colspan="4" class="text-center font-italic">Your cart is empty!</td>
            </tr>
        }
        else
        {
            @foreach (CartItemViewModel item in Model.CartItems)
            {
                @Html.Partial("_cartItem", item)
            }
        }
    </table>

    <div class="text-center align-self-stretch w-100">
        <div class="text-center font-md-large">
            Total cost: <strong>@Model.TotalPrice.ToString("N2") zł</strong>
        </div>

        <!-- Buttons - Go to main page - Checkout -->
        <div class="col-sm-12 text-center" style="margin: 10px 0px 20px 0px">
            <a asp-controller="Catalog" asp-action="Index" class="btn btn-info text-light" style="margin: 5px 5px 5px 5px">Go To Main Page</a>
            <a asp-controller="Cart" asp-action="GoToCheckout" class="btn btn-success text-light content-margin" style="margin: 5px 5px 5px 5px">Checkout</a>
        </div>

    </div>
</div>



@section Scripts
{
    <script src="~/js/cartScripts.js"></script>
}

