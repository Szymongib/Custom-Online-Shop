@{
    ViewData["Title"] = "Admin Panel";
}

<h2 class="content-margin">Controll Panel</h2>
<div class="container">
    <div class="row">

        <!-- Users -->
        <div class="col-sm-12 col-md-6 col-lg-4" style="padding: 10px">
            <a class="btn btn-info w-100" style="margin: 10px" asp-action="Users">Manage Users</a>
        </div>

        <!-- Products -->
        <div class="col-sm-12 col-md-6 col-lg-4" style="padding: 10px">
            <a class="btn btn-success w-100" style="margin: 10px" asp-action="Products">Manage Products</a>
        </div>

        <!-- Roles -->
        <div class="col-sm-12 col-md-6 col-lg-4" style="padding: 10px">
            <a class="btn btn-warning w-100" style="margin: 10px" asp-action="Roles">Manage Roles</a>
        </div>
    </div>
</div>