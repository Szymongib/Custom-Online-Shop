@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "Roles";
}

<div class="container" style="margin: 12px">

    <h2 class="content-margin text-left">Roles:</h2>
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <table class="table table-condensed table-bordered table-bordered">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Users</th>
            <th></th>
        </tr>
        @if (Model.Count() == 0)
        {
            <tr><td colspan="4" class="text-center">No Roles</td></tr>
        }
        else
        {
            foreach (RoleViewModel role in Model)
            {
                <tr>
                    <td>@role.Id</td>
                    <td>@role.Name</td>
                    <td identity-role="@role.Id"></td>
                    <td>
                        <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post">
                            <button type="submit"
                                    class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        }
    </table>
    
    <a class="btn btn-outline-success" asp-action="CreateRole">Create Role</a>
    <br />
    <a class="btn btn-outline-info" asp-action="Index" style="margin-top: 20px"><i class="fa fa-arrow-left" aria-hidden="true"></i> Go Back</a>


</div>