@model IEnumerable<ProductDisplayViewModel>
@{
    ViewData["Title"] = "Products";
}

<div class="container " style="margin: 12px">
    <h2 class="text-left content-margin">Products:</h2>

    <div class="row">
        <div class="col-xs-12">
            <div class="table-responsive">
                <table summary="This table shows how to create responsive tables using Bootstrap's default functionality" class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Product Name</th>
                            <th>Category</th>
                            <th>Unit Price</th>
                            <th>Edite</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() == 0)
                        {
                            <tr>
                                <td colspan="6">There are no products in database.</td>
                            </tr>
                        }
                        else
                        {
                            @foreach (ProductDisplayViewModel c in Model)
                            {
                                <tr>
                                    <td>@c.Id</td>
                                    <td>@c.Name</td>
                                    <td>@c.CategoryName</td>
                                    <td>@c.Price</td>
                                    <td>
                                        <p data-placement="top" data-toggle="tooltip" title="Edit">
                                            <a class="btn btn-primary btn-sm" asp-action="EditProduct" asp-route-id="@c.Id">
                                                Edit
                                            </a>
                                        </p>
                                    </td>
                                    <td>
                                        <div data-placement="top" data-toggle="tooltip" title="Delete">
                                            <form asp-action="DeleteProduct" asp-route-id="@c.Id">
                                                <button class="btn btn-danger btn-sm" type="submit">
                                                    Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <a class="btn btn-lg btn-outline-success" asp-action="AddProduct">Add Product</a>
    <br />

    <a class="btn btn-outline-info" asp-action="Index" style="margin-top: 20px"><i class="fa fa-arrow-left" aria-hidden="true"></i> Go Back</a>

</div>
